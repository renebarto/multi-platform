pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                mkdir -p build
                cd build
                cmake -DCMAKE_BUILD_TYPE=Debug -DCMAKE_INSTALL_PREFIX=../install
                make clean
                make
            }
        }
        stage('Test'){
            steps {
                output/debug/bin/osal.test --xmloutput
                junit 'reports/**/*.xml'
            }
        }
        stage('Deploy') {
            steps {
                echo 'publish'
            }
        }
    }
}