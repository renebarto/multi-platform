pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Build'
                sh 'mkdir -p build'
                sh 'cd build'
                sh 'cmake -DCMAKE_BUILD_TYPE=Debug -DCMAKE_INSTALL_PREFIX=../install'
                sh 'make'
            }
        }
        stage('Test'){
            steps {
                echo 'Test'
                sh 'mkdir -p reports'
                sh 'output/debug/bin/osal.test --xmloutput reports/osal.test.xml'
                step([$class: 'XUnitBuilder',
                    thresholds: [[$class: 'FailedThreshold', unstableThreshold: '1']],
                    tools: [[$class: 'JUnitType', pattern: 'reports/**'],
                           [$class: 'CppTestJunitHudsonTestType', pattern: 'reports/**/*.xml']]])
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy'
                sh 'mkdir -p /home/rene/jenkins-deploy/multi-platform'
                archiveArtifacts 'output/debug'
            }
        }
    }
}